<div style="padding-bottom:5px;">
  <% @rules.each_with_index do |rule, index| %>
    <div style="padding-bottom:3px;">
      <input type="button" value=" + " onClick="addLanguageRule('<%=index+1%>')" style="cursor:pointer; width: 30px;">
      <input type="button" value=" - " onClick="deleteLanguageRule('<%=index%>')" style="cursor:pointer; width: 30px;">
      
      <% rule.definition ||= {} %>
      
      <%=hidden_field_tag("rules[#{index}][id]", rule.id)%>
      <%=select_tag("rules[#{index}][type]", options_for_select(Tr8n::LanguageRule.options, rule.class.name), :onChange=>"Tr8n.element('rule_#{index}_reset_values').value='true'; updateLanguageRules()")%>
      <%=hidden_field_tag("rules[#{index}][reset_values]", "false", :id => "rule_#{index}_reset_values")%>
      
      <%=render :partial=> "#{rule.class.dependency}_rule", :locals => {:rule => rule, :index => index} %>
    </div>
  <% end %>
</div>

<%= link_to_function(tra("+ Add Context Rule"), "addLanguageRule('#{@rules.size}')") %>
<% unless @rules.empty? %>
  | <%= link_to_function(tra("Clear All", "Clear all context rules"), "clearLanguageRules()") %>
<% end %>

<div style="color:grey; font-size:10px; padding-top:15px; padding-bottom:5px;"><%=tra("For numeric rules, you can enter multiple values seprated by commas")%></div>
