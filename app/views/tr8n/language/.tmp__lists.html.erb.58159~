  <div style="color:grey; font-size:10px"><%=trl("Your Languages")%></div>
  <div class="inner" style="max-height:53px; overflow: auto; margin-bottom:5px">
      <ul class="language_list">
      <% @user_languages.each do |user_language|%>
        <% language = user_language.language %>  
        <li>
            <span style="font-size:8px; float:right; color:#ccc;">
						  <% if language.default? %>
							   default
							<% else %>
                 <%="#{language.completeness || 0}%"%>
                 <% unless user_language.manager? %>
	                 <%=link_to_function(image_tag("/tr8n/images/close.gif", :style=>"width:5px; padding-right:3px; padding-left:3px;"), "tr8nLanguageSelector.removeLanguage('#{language.id}');") %>
 								 <% end %>
		          <% end %>  
    			 </span>
          <div onClick="$('language_selector_locale').value='<%=language.locale%>'; $('language_selector_form').submit();">
            <%=image_tag("/tr8n/images/flags/#{language.flag}.png", :style=>"vertical-align:middle")%>
						<% if language == tr8n_current_language %>
						  <strong><%=language.full_name%></strong>
            <% else %>
              <%=language.full_name%>
						<% end %>
          </div>
        </li>
      <% end %>
    </ul>      
  </div>
  <div style="color:grey; font-size:10px"><%=trl("Other Languages")%></div>
<% end %>

