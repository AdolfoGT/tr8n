<% if @cases.empty? %>
	<div style="font-style:italic; font-size: 10px; color: grey;">
	  <%=tra("There are no language cases defined for this language.")%>
	  <%=link_to_function(tra("Click here to add language cases."), "addLanguageCase('#{@cases.size}')")%>
	</div>
	
<% else %>

	<table style="width:100%" cellpadding="0" cellspacing="0">
	  <tr style="border-bottom:1px solid #ccc;">
	    <th style="width:70px !important;">&nbsp;</th>
	    <th style="width:80px; font-weight:bold;"><%= tra("Case Key", "Language case key") %></th>
	    <th style="width:150px; font-weight:bold;"><%= tra("Latin Name", "Language case latin name") %></th>
	    <th style="width:200px; font-weight:bold;"><%= tra("Native Name", "Language case native name") %></th>
	    <th style="width:50%; font-weight:bold;"><%= tra("Description", "Language case description") %></th>
	  </tr>
	  
	  <% @cases.each_with_index do |lcase, index| %>
	      <tr>
	        <td style="width:70px !important;">
	          <input type="button" value=" + " onClick="addLanguageCase('<%=index+1%>')" style="cursor:pointer; width: 30px;">
	          <input type="button" value=" - " onClick="deleteLanguageCase('<%=index%>')" style="cursor:pointer; width: 30px;">
	        </td>
	        <td>
	           <%= text_field_tag("cases[#{index}][keyword]", lcase.keyword, :style => "width:90%; border: 1px solid red;")%>
	        </td>
	        <td>
	           <%= text_field_tag("cases[#{index}][latin_name]", lcase.latin_name, :style => "width:95%;")%>
	        </td>
	        <td>
	           <%= text_field_tag("cases[#{index}][native_name]", lcase.native_name, :style => "width:95%;")%>
	        </td>
	        <td>
	           <%= text_field_tag("cases[#{index}][description]", lcase.description, :style => "width:95%")%>
	        </td>
	      </tr>
	  <% end %>
	</table>
	
	<div style="color:grey; font-size:10px; padding-top:15px; padding-bottom:5px;">
	  <%=tra("Modifying the case keyword value will invalidate all translated values provided for the case.")%>
	</div>
<% end %>

