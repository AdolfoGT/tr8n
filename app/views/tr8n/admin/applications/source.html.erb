<%= render :partial => "/tr8n/admin/common/header" %>
<%= render :partial => "tabs", :locals => {:current_tab => "Source: #{@source.title}"} %>

<table class="admin_table">
    <tr>
        <th width="160">
            Source Id
        </th>
        <td>
            <%=@source.id %>
        </td>
    </tr>
    <tr>
        <th>
            Source Key
        </th>
        <td>
            <%=@source.source %>
        </td>
    </tr>
    <tr>
        <th>
            Name
        </th>
        <td>
            <%=@source.name %>
        </td>
    </tr>
    <tr>
        <th>
            Description
        </th>
        <td>
            <%=@source.description %>
        </td>
    </tr>
    <tr>
        <th>
            Created At
        </th>
        <td>
            <%=@source.created_at %>
        </td>
    </tr>
    <tr>
        <th>
            Updated At
        </th>
        <td>
            <%=@source.updated_at %>
        </td>
    </tr>
    <tr>
        <th>
            
        </th>
        <td>
        <%
          html = []
          html << link_to_function("Update", "tr8nLightbox.show('/tr8n/admin/applications/lb_update_source?source_id=#{@source.id}', {height:350})")
          html << link_to("Recalculate All Metrics", {:action => :recalculate_source, :source_id => @source.id}, {:confirm => "Are you sure you want to recaluclate all metrics for this source?"})
        %>
        <%= html.join(' | ') %>
        </td>
    </tr>    
</table>

<%=  tr8n_sections_tag(:modes => [
            ["Metrics Table",   {:mode => :metrics, :partial => "source_metrics"}],
            ["Metrics Charts",  {:mode => :charts, :partial => "source_charts"}],
        ],
        :params => {
            :source_id => @source.id
        }
) %>

<%= render :partial => "/tr8n/admin/common/footer" %>
