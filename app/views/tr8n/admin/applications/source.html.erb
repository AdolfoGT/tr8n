<%= render :partial => "/tr8n/admin/common/header" %>
<%= render :partial => "tabs", :locals => {:current_tab => "Source: #{@source.title}"} %>

<table class="admin_table">
    <tr>
        <th width="160">
            Source Id
        </th>
        <td>
            <%=@source.id %>
        </td>
    </tr>
    <tr>
        <th>
            Source Key
        </th>
        <td>
            <%=@source.source %>
        </td>
    </tr>
    <tr>
        <th>
            Name
        </th>
        <td>
            <%=@source.name %>
        </td>
    </tr>
    <tr>
        <th>
            Description
        </th>
        <td>
            <%=@source.description %>
        </td>
    </tr>
    <tr>
        <th>
            Created At
        </th>
        <td>
            <%=@source.created_at %>
        </td>
    </tr>
    <tr>
        <th>
            Updated At
        </th>
        <td>
            <%=@source.updated_at %>
        </td>
    </tr>
    <tr>
        <th>
            
        </th>
        <td>
        <%
          html = []
          html << link_to_function("Update", "tr8nLightbox.show('/tr8n/admin/applications/lb_update_source?source_id=#{@source.id}', {height:350})")
        %>
        <%= html.join(' | ') %>
        </td>
    </tr>    
</table>

<%=  tr8n_sections_tag(:modes => [
          ["Source Metrics",   {:mode => :metrics, :partial => "source_metrics"}],
          ["Translation Keys", {:mode => :translation_keys, :partial => "source_keys"}],
          ["Translations", {:mode => :translations}],
        ],
        :params => {
            :source_id => @source.id
        },
        :title => lambda{ |mode|
          html = []
          html << "#{mode.first} "
          if mode.last[:mode] == :metrics
            if params[:charts]
              html << "<span style='font-size:12px;'>"
              html << link_to("view as table", params.merge(:charts => false)) 
              html << "</span>"
            else
              html << "<span style='font-size:12px;'>"
              html << link_to("view as charts", params.merge(:charts => true)) 
              html << "</span>"
            end
          end
          html.join("")
        }
) %>

<%= render :partial => "/tr8n/admin/common/footer" %>
