<%= render :partial => "/tr8n/admin/common/header" %>
<%= render :partial => "tabs" %>
<%= tr8n_will_filter(@keys) %>
<%= render :partial => "/tr8n/admin/common/paginator", :locals => {:objects => @keys} %>

<table class="admin_table">
  <tr>
    <th>
      Label
    </th>
    <th>
      Tokens
    </th>
    <th style="text-align:right">
      Translations
    </th>
    <th style="width:80px"></th>
  </tr>  
  <% @keys.each_with_index do |key, index| %>
    <tr>
      <td>
        <%=link_to(key.label, :action => :view, :key_id => key.id)%>
         <div style="color:grey; font-size:10px;">
            <%=key.description %>
         </div>
			</td>      
      <td><%=key.tokens.join(", ")%></td>
      <td style="text-align:right">
        <%=link_to(key.translations.size, "/tr8n/admin/translation/index?wf_c0=translation_key_id&wf_o0=is&wf_v0_0=#{key.id}") %>
      </td>      
      <td style="text-align:right">
        <%=link_to("View", :action => :view, :key_id => key.id) %>
        | <%=link_to("Delete", {:action => :delete, :key_id => key.id}, {:confirm => "Are you sure you want to delete this key?"}) %>
      </td>
    </tr>
  <% end %>
</table>

<%= render :partial => "/tr8n/admin/common/paginator", :locals => {:objects => @keys} %>
<%= render :partial => "/tr8n/admin/common/footer" %>
