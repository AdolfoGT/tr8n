<%= render :partial => "/tr8n/admin/common/header" %>

<h1>
  <%=render :partial => "tabs" %>
	
	Translation Sources
</h1>

<%= will_filter %>

<%= render :partial => "/tr8n/admin/common/paginator", :locals => {:objects => @sources} %>

<table class="admin_table">
  <tr>
    <th align="left">
      Source Id
    </th>
    <th align="left">
      Source
    </th>
    <th align="left">
      Created At
    </th>
    <th align="right">
      Translation Key Count
    </th>
  </tr>  
  <% @sources.each_with_index do |source, index| %>
    <tr>
      <td><%=link_to(source.id, "/tr8n/admin/translation_key/key_sources?mf_c_0=translation_source_id&mf_co_0=is&mf_cv_0_0=#{source.id}") %></td>
      <td><%=source.source%></td>
      <td><%=source.created_at%></td>
      <td align="right">
        <%=link_to(source.translation_keys.size, "/tr8n/admin/translation_key/key_sources?mf_c_0=translation_source_id&mf_co_0=is&mf_cv_0_0=#{source.id}") %>
      </td>
    </tr>
  <% end %>
</table>

<%= render :partial => "/tr8n/admin/common/paginator", :locals => {:objects => @sources} %>
<%= render :partial => "/tr8n/admin/common/footer" %>
