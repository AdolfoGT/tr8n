<% form_tag("", :id => "translators_form") do %>
<%= hidden_field_tag(:type, "translator") %>
<%= will_filter_table_tag(@results, :columns => [
    [:checkbox, 'component_objects'],     
    [:id, lambda{|ctran|
      ctran.component.id
    }],
    [:component, lambda{|ctran|
       link_to(ctran.component.name, :controller => "/tr8n/admin/applications", :action => :component, :comp_id => ctran.component.id) 
    }],
    [:actions, lambda{|ctran|
      html = []
      html << link_to("Remove", {:controller => "/tr8n/admin/applications", :action => :remove_objects_from_component, :component_object_id => ctran.id, :type => :translator}, :confirm => "Are you sure you want to do that?")
      html.join(' | ')
    }, 'text-align:right;white-space:nowrap;']

  ]) %>
<% end %>

<%= will_filter_actions_bar_tag(@results, [
  ['Remove Selected Translators', 'removeAllSelected()']
]) %>

<script>
  function removeAllSelected() {
    if (!confirm('Are you sure you want to remove all selected translators from this component?'))
       return;
    Tr8n.element('translators_form').action = "/tr8n/admin/applications/remove_objects_from_component";
    Tr8n.element('translators_form').submit();
  }
</script>   
