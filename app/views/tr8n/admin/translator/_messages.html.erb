<% form_tag("", :id => "topics_form") do %>
  <%= will_filter_table_tag(@results, :columns => [
    :id,
    [:language_id, lambda{|message|
      if message.language
        link_to(message.language.english_name, :controller => "/tr8n/admin/language", :action => :view, :lang_id => message.language.id)
      else
         "Deleted Language"    
      end  
    }], 

    :message,
    :created_at,
    [:actions, lambda{|message|
        actions = []
        actions << link_to("Delete", {:controller => "/tr8n/admin/forum", :action => :delete, :msg_id => message.id}, {:confirm => "Are you sure you want to delete this message?"})
        actions.join(" | ")
    }, 'padding:5px;text-align:right;white-space:nowrap;'] 
  ]) %>
<% end %>