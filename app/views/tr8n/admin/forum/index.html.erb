<%= render :partial => "/tr8n/admin/common/header" %>
<%= will_filter %>
<br>

<%= render :partial => "/tr8n/admin/common/paginator", :locals => {:objects => @messages} %>

<table class="admin_table">
  <tr>
    <th align="left">
      Author
    </th>
    <th align="left">
      Message
    </th>
    <th align="left">
      Created On
    </th>
    <th></th>
  </tr>  
  <% @messages.each_with_index do |msg, index| %>
    <tr>
      <td style="vertical-align:top;"><%=msg.translator ? msg.translator.name : "Deleted user" %></td>
      <td style="vertical-align:top;"><%=msg.message%></td>
      <td style="vertical-align:top;"><%=msg.created_at%></td>
      <td style="text-align:right; vertical-align:top; width:50px">
        <%=link_to("Delete", {:action => :delete, :msg_id => msg.id}, {:confirm => "Are you sure you want to delete this message?"}) %>
      </td>
    </tr>
  <% end %>
</table>

<%= render :partial => "/tr8n/admin/common/paginator", :locals => {:objects => @messages} %>
<%= render :partial => "/tr8n/admin/common/footer" %>
