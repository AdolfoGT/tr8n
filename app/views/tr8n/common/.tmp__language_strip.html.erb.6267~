<% if Tr8n::Config.enabled? and (Tr8n::Config.open_translator_mode? or Tr8n::Config.current_user_is_translator?) %>
  <div class="tr8n_language_strip" style="font-size:12px;">
	  <% languages = Tr8n::Language.completed_languages%>
  	<% languages[0..(opts[:size]-1)].each do |lang| %>
		    <%= tr8n_language_name_tag(lang, opts) %> &nbsp;
		<% end %>
		
		<% if opts[:more] %>
		  <span id="tr8n_more_strip_languages">
		    <%=link_to_function("&raquo;", "$('tr8n_more_strip_languages').hide(); Effect.Appear('tr8n_other_strip_languages');") %>
			</span>	
			
			<span id="tr8n_other_strip_languages" style="display:none">
			  <% languages[opts[:size]..-1].each do |lang| %>
	        <%= tr8n_language_name_tag(lang, opts) %> &nbsp;
	      <% end %>
				
	      <span id="tr8n_less_strip_languages">
	        <%=link_to_function("&laquo;", "$('tr8n_more_strip_languages').show(); Effect.Fade('tr8n_other_strip_languages');") %>
	      </span> 
			</span>
		<% end %>	
  </span>
<% end %>