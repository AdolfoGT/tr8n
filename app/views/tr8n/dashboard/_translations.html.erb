<style>
	.translations_table {
		width:100%; background-color:white; border: 1px dotted #ccc;
	}
	.translations_table td {
    padding:3px;
  } 
</style>

<% unless lang.recently_updated_translations.empty? %>
	<div style="padding-top:10px; font-size:14px; border-bottom:1px solid #ccc; margin-bottom:5px;">
    <div style="float:right; font-size:12px;">
       <%=link_to(trl("view all"), :controller => "/tr8n/translations", :action => :index, :locale => lang.locale)%>
    </div>

    <%=tr8n_toggler_tag("trans_content_#{lang.id}", "", false)%>
	  <%=trl("Recent Translations")%>
		<span style="color:#ccc; font-size:12px;">(<%=trl("last 5")%>)</span>
	</div>
	
	<div id="trans_content_<%=lang.id%>" style="display:none">
		<table class="translations_table">
		  <tr style="border-bottom:1px solid #ccc;">
		    <td class="topic_header" style="width:200px;"><%=trl("Translator")%></td>
		    <td class="topic_header" style="width:25px;"><%=trl("Rank")%></td>
		    <td class="topic_header" style="width:80px;text-align:center;"><%=trl("Your Vote")%></td>
		    <td class="topic_header" style=""><%=trl("Translation")%></td>
		    <td class="topic_header" style="width:50px;">&nbsp;</td>
		  </tr>  
		
		  <% lang.recently_updated_translations.each do |trn| %>
		    <% style = "border-bottom:1px dotted #ccc;" unless lang.recently_updated_translations.last == trn %>
		    <tr style="<%=style%>">
		      <%= render :partial => "/tr8n/translations/translation", :locals => {:translation => trn, :mode => :view, :show_actions => false} %>
					<td style="text-align:right; padding-right:5px;">
						<%=link_to(image_tag("/tr8n/images/table_edit.png"), :controller => "/tr8n/phrases", :action => :view, :locale => lang.locale, :translation_key_id => trn.key.id) %>
					</td>
		    </tr>
		  <% end %>
		</table>
	</div>	
<% end %>	