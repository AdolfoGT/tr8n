<% color = translation.key.locked? ? "#ECFFEF" : "#FDFDDF" %>
<div style="font-size: 11px; color: grey; margin-top:5px; margin-bottom:5px; padding:5px; background:<%=color%>; border:1px dotted #ccc; <%=tr8n_style_attribute_tag('text-align', 'left')%>">
  <% if translation.key.locked? %>
    <div style="<%=tr8n_style_attribute_tag('float', 'right')%>"><%=image_tag("tr8n/lock.png", :style=>"width:12px", :title => trla("This phrase is locked"))%></div>
  <% end %>

  <%=tra("Original Phrase:")%> 
  <span dir='ltr'>
  <%=link_to(translation.key.sanitized_label, :controller => "/tr8n/phrases", :action => :view, :locale => translation.language.locale, :translation_key_id => translation.key.id) %>
  </span>

  <% unless translation.key.description.blank? %>
    <div style="padding-top:3px; padding-bottom:3px; <%=tr8n_style_attribute_tag('text-align', 'left')%>"><%= translation.key.description %></div>
  <% end %>  
</div>
