				    <%=select_tag(:submitted_on, options_for_select([["any date", "any"], ["today", "today"], ["yesterday", "yesterday"], ["in the last week", "last_week"]], params[:submitted_on]))%>
            <%=trl("with")%>
            <%=select_tag(:ranked_as, options_for_select([["any rank", "any"], ["acceptable rank", "acceptable"], ["pending rank", "pending"], ["unacceptable rank", "unacceptable"]], params[:ranked_as]))%>
					</span>
				</td>
			</tr>
	   </table>
  <% end %>
</div>

